# SE Letters - Environment Variables Template
# Copy this file to .env and fill in your actual values

# xAI API Configuration
XAI_API_KEY=your_xai_api_key_here
XAI_BASE_URL=https://api.x.ai/v1
XAI_MODEL=grok-3-beta

# Project Configuration
PROJECT_NAME=SE_Letters
PROJECT_VERSION=1.0.0
ENVIRONMENT=development

# Data Paths (relative to project root)
DATA_INPUT_DIR=data/input
DATA_OUTPUT_DIR=data/output
DATA_TEMP_DIR=data/temp
LOGS_DIR=logs

# Processing Configuration
MAX_WORKERS=4
BATCH_SIZE=10
RETRY_ATTEMPTS=3

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/se_letters.log

# Optional: Google Cloud Project (if using Google services)
# GOOGLE_CLOUD_PROJECT=your_project_id

# Optional: Azure Configuration (if using Azure services)
# AZURE_SUBSCRIPTION_ID=your_subscription_id
# AZURE_RESOURCE_GROUP=your_resource_group

# Optional: AWS Configuration (if using AWS services)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
